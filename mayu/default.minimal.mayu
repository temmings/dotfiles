 key C-S-A-Right        = &WindowMove(1, 0, MDI)                        	#       〃
 key C-S-A-Up           = &WindowMove(0, -1, MDI)                       	#       〃
 key C-S-A-Down         = &WindowMove(0, 1, MDI)                        	#       〃
 key C-S-A C-S-B C-A-A  = &WindowClingToLeft(MDI)                       	# ウィンドウ左に寄せる
