### os specific
case "$OSTYPE" in
    cygwin*) source_if_exist ~/.zsh/zshenv.cygwin ;;
    darwin*) source_if_exist ~/.zsh/zshenv.darwin ;;
    freebsd*) source_if_exist ~/.zsh/zshenv.freebsd ;;
    linux*) source_if_exist ~/.zsh/zshenv.linux ;;
esac

typeset -U path PATH

source_if_exist ~/.zshenv.local
