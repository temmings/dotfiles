# -*- coding: utf-8 -*-
#zmodload zsh/zprof && zprof

### functions {{{
function source_if_exist {
  [[ -f "$1" ]] && source "$1"
}

function get_value_of_key() {
    local file="$1"
    local key=$2
    local delimiter=$3
    if [ -n "$file" -a -f "$file" -a -n "$key" -a -n "$delimiter" ]; then
        grep -h "${key}${delimiter}" $file | awk -F"$delimiter" '{print $2;}'
    fi
}

function is_executable() {
    (($+commands[$1]))
}

function get_executable() {
    is_executable "$1" && echo "$1" || return
}

function get_executable_first() {
    while [[ -n "$1" ]]; do
        get_executable "$1" && return
        shift
    done
    return 1
}

function is_exist_func() {
    (($+functions[$1]))
}

function abs_path() {
    (cd -P -- "$(dirname -- "$1")" && echo "$(pwd -P)/$(basename -- "$1")")
}

function home_or_basename() {
    case "$1" in
        $HOME) echo '~';;
        *) echo $(basename $1) ;;
    esac
}

function get_ssh_client_ip() {
    echo $SSH_CLIENT | awk '{print $1}'
}
# }}}

local my_zsh_function_path=$HOME/.zsh/functions
fpath=($my_zsh_function_path $fpath)

[[ "$OSTYPE" = "cygwin" ]] && unset PATH
##  N: NULL_GLOBオプションを設定。globがマッチしなかったり存在しないパスを無視する。
##  -: シンボリックリンク先のパスを評価。
##  /: ディレクトリのみ残す。
## ^W: reject world-writable directories
path=(
    ~/bin(N-/)
    ~/.local/bin(N-/)
    ~/Dropbox/bin(N-/)
    ~/node_modules/.bin(N-/)
    ~/.cabal/bin(N-/)
    ~/.go/bin(N-/)
    ### pear / pecl $ php -d detect_unicode=0 =(curl -fsSL http://pear.php.net/go-pear.phar)
    ~/pear/bin(N-/)
    ### cpanminus
    ~/perl5/bin(N-/)
    /usr/local/heroku/bin(N-/)
    /usr/local/bin(N-/)
    /usr/local/sbin(N-/)
    /sbin(N-/)
    /bin(N-/)
    /usr/sbin(N-/)
    /usr/bin(N-/)
    ${^path}(N-/^W)
    /usr/games(N-/)
    /usr/X11/bin(N-/)
    /usr/X11R6/bin(N-/)
    ### NetBSD packages
    /usr/pkg/bin(N-/)
    /usr/pkg/sbin(N-/)
    ### qmail
    /var/qmail/bin(N-/)
)
typeset -U path PATH

